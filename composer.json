{
    "name": "rikudou/activity-pub",
    "description": "A strongly typed, validated and developer-friendly ActivityPub implementation in PHP",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Rikudou\\ActivityPub\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Rikudou\\Tests\\ActivityPub\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Dominik Chrastecky",
            "email": "dominik@chrastecky.cz"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.4",
        "psr/http-client": "^1.0",
        "ext-openssl": "*",
        "psr/http-factory": "^1.1",
        "rikudou/iterables": "^1.3",
        "rikudou/array-merge-recursive": "^1.0"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^7.9",
        "phpunit/phpunit": "^11.5"
    }
}
